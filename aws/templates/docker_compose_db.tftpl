version: '3.8'
services:
  db:
    image: postgres:14
    restart: always
    container_name: 'postgres'
    command: postgres -c 'max_connections=2000'
    environment:
        POSTGRES_PASSWORD: '${postgres_password}'
        POSTGRES_USER: '${postgres_user}'
    ports:
      - 5432:5432
    logging:
      driver: journald